generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model ocr {
  id Int @id @default(autoincrement())

  A_weight        Int
  B_weight        Int
  challan         String
  address         String
  map_url         String
  latitude        Float
  longitude       Float
  delivery_date   DateTime
  delivery_status String
  net_weight      Int
  tare_weight     Int
  gross_weight    Int
  vehicle_number  String
  date            DateTime
  created_at      DateTime @default(now())
  e_way_bill      String   @default("")
}

model challan {
  id       Int @id @default(autoincrement())
  starting Int
  ending   Int
}
